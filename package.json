{
  "name": "js-node-tmpl",
  "version": "0.1.0",
  "description": "Node.js template",
  "main": "index.js",
  "license": "MIT",
  "author": "Michio Nakagawa",
  "repository": {
    "type": "git",
    "url": "https://github.com/rising3/js-node-tmpl.git"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build:babel": "babel src --out-dir dist",
    "start": "node src/index.js",
    "dev": "node-dev --respawn --poll src/index.js",
    "start:bundle": "node dist/bundle.js",
    "dev:bundle": "node-dev --respawn --poll dist/bundle.js",
    "build:webpack": "webpack --mode production",
    "start:webpack": "webpack serve --mode development",
    "dev:webpack": "webpack --mode development --watch",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint 'src/**/*.js?(x)'",
    "lint:fix": "eslint 'src/**/*.js?(x)' --fix",
    "jsdoc": "jsdoc -c jsdoc.config.json -d ./dist/docs ./src/"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.16",
    "@babel/plugin-transform-arrow-functions": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-react": "^7.12.13",
    "autoprefixer": "^10.2.4",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^5.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "lint-staged": "^10.5.3",
    "node-dev": "^6.2.0",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.6",
    "postcss-loader": "^5.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.7",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-node-externals": "^2.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "./src/*.{js,json}": "yarn eslint --cache --fix"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
